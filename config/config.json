{
	"project_version": "0.0.0-SNAPSHOT",
	"minecraft_version": "1.15.2",
	"java_target": 8,

    "merge": {
        "version": "net.minecraftforge:mergetool:1.1.3:fatjar",
        "args": ["--client", "{client}", "--server", "{server}", "--ann", "{annotations}", "--output", "{output}", "--inject", "false"],
        "jvmargs": []
    },
    "rename": {
        "version": "org.minecraftplus:vignette:0.3.0.2",
        "args": ["--jar-in", "{input}", "--jar-out", "{output}", "--mapping-format", "tsrg2", "--mappings", "{mappings}", "--cfg", "{libraries}", "--deduce-param-names", "--dictionary", "{dictionary}", "--create-inits", "--fernflower-meta"],
        "repo": "https://maven.minecraftplus.org/"
    },
    "fernflower": {
        "version": "net.minecraftforge:forgeflower:1.5.498.22",
        "args": ["-din=1", "-rbr=1", "-dgs=1", "-asc=1", "-rsy=1", "-iec=1", "-isl=0", "-log=TRACE", "-cfg", "{libraries}", "{input}", "{output}"],
        "jvmargs": ["-Xmx4G"]
    },

    "libraries": {
        "client": ["com.google.code.findbugs:jsr305:3.0.1"],
        "server": [
			"com.google.code.findbugs:jsr305:3.0.1",
			"com.mojang:javabridge:1.0.22",
			"net.sf.jopt-simple:jopt-simple:5.0.3",
			"io.netty:netty-all:4.1.25.Final",
			"com.google.guava:guava:21.0",
			"org.apache.commons:commons-lang3:3.5",
			"commons-io:commons-io:2.5",
			"commons-codec:commons-codec:1.10",
			"com.mojang:brigadier:1.0.17",
			"com.mojang:datafixerupper:2.0.24",
			"com.google.code.gson:gson:2.8.0",
			"com.mojang:authlib:1.5.25",
			"it.unimi.dsi:fastutil:8.2.1",
			"org.apache.logging.log4j:log4j-api:2.8.1",
			"org.apache.logging.log4j:log4j-core:2.8.1"
		],

        "joined": ["com.google.code.findbugs:jsr305:3.0.1","net.minecraftforge:mergetool:1.1.3:api"]
    },


    "rename_old": {
        "version": "net.md-5:SpecialSource:1.8.3:shaded",
        "args": ["--in-jar", "{input}", "--out-jar", "{output}", "--srg-in", "{mappings}"],
        "repo": "https://repo1.maven.org/maven2/"
    },
    "rename_lex": {
        "version": "net.minecraftforge.lex:vignette:0.2.0.16",
        "args": ["--jar-in", "{input}", "--jar-out", "{output}", "--mapping-format","tsrg2", "--mappings", "{mappings}", "--cfg", "{libraries}", "--create-inits", "--fernflower-meta"]
    }
}
